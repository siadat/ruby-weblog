%form{method: "post", action: "/posts/action/submit"} 
  - if params[:action] == 'update'
    %input{type: "hidden", name: "post_id", value: params[:post][:id]}
  
  %label Title:
  %br
  %input{type: "text", name: "title", value:params[:title]}
  %br
  %label Body:
  %br
  %textarea{name: "body"}= params[:body]
  %br
  %button{type: "submit", name: "action", value: params[:action]} Submit
- if params[:action] == 'update'
  %a{:href => "/posts/#{params[:post][:id]}"} Back
- else
  %a{:href => "/posts"} Back
